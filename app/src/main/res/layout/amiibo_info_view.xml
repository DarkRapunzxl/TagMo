<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:columnCount="2"
    app:rowCount="4">

    <TextView
        android:id="@+id/txtTagInfo"
        android:gravity="center"
        android:text=""
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        app:layout_row="1" />

    <TextView
        android:id="@+id/txtName"
        android:text="NAME"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/txtTagId"
        android:gravity="end"
        android:text="TAGID"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0" />

    <TextView
        android:id="@+id/txtAmiiboSeries"
        android:text="AMIIBO SERIES"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1" />

    <TextView
        android:id="@+id/txtAmiiboType"
        android:gravity="end"
        android:text="AMIIBO TYPE"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1" />

    <TextView
        android:id="@+id/txtGameSeries"
        android:text="GAME SERIES"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="2" />

    <TextView
        android:id="@+id/txtCharacter"
        android:gravity="end"
        android:text="CHARACTER"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="2" />

    <TextView
        android:id="@+id/txtPath"
        android:text="PATH"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        app:layout_row="3" />

</android.support.v7.widget.GridLayout>